<?xml version="1.0" encoding="UTF-8"?>
<bot_config>
    <!-- Hugging Face Bot Configuration -->
    <!-- This bot uses local Llama 3.2 model through Hugging Face Transformers -->

    <bot_info>
        <name>Hackerbot-HF</name>
        <nick>hfbot</nick>
        <user>huggingface</user>
        <realname>Hackerbot with Hugging Face Llama 3.2</realname>
        <server>127.0.0.1</server>
        <port>6667</port>
        <channels>#hackerbot</channels>
        <version>1.0.0</version>
    </bot_info>

    <!-- LLM Configuration -->
    <llm_provider>huggingface</llm_provider>
    <llm_config>
        <host>127.0.0.1</host>
        <port>8899</port>
        <model>TinyLlama/TinyLlama-1.1B-Chat-v1.0</model>
        <max_tokens>150</max_tokens>
        <temperature>0.7</temperature>
        <streaming>true</streaming>
        <timeout>300</timeout>

        <!-- System prompt for cybersecurity training -->
        <system_prompt>
            You are a helpful cybersecurity training assistant. You help users learn about hacking techniques and security concepts. Be encouraging and educational in your responses. Keep explanations clear and practical. Focus on ethical hacking and defensive security practices.
        </system_prompt>
    </llm_config>

    <!-- RAG and CAG Configuration -->
    <rag_cag_enabled>true</rag_cag_enabled>
    <rag_config>
        <enabled>true</enabled>
        <max_results>3</max_results>
        <similarity_threshold>0.7</similarity_threshold>
    </rag_config>

    <cag_config>
        <enabled>true</enabled>
        <entity_extraction>true</entity_extraction>
        <knowledge_graph>true</knowledge_graph>
    </cag_config>

    <!-- Knowledge Sources -->
    <knowledge_sources>
        <source>mitre_attack</source>
        <source>man_pages</source>
        <source>markdown_docs</source>
    </knowledge_sources>

    <!-- Training Attacks/Scenarios -->
    <attacks>
        <attack id="1" name="Reconnaissance" difficulty="beginner">
            <description>Learn basic information gathering techniques</description>
            <objectives>
                <objective>Identify open ports using nmap</objective>
                <objective>Discover subdomains using dnsenum</objective>
                <objective>Gather information with whois</objective>
            </objectives>
        </attack>

        <attack id="2" name="Web Application Testing" difficulty="intermediate">
            <description>Learn web application security testing</description>
            <objectives>
                <objective>Identify SQL injection vulnerabilities</objective>
                <objective>Test for XSS vulnerabilities</objective>
                <objective>Analyze HTTP headers for security misconfigurations</objective>
            </objectives>
        </attack>

        <attack id="3" name="Network Security" difficulty="advanced">
            <description>Advanced network security techniques</description>
            <objectives>
                <objective>Analyze network traffic with Wireshark</objective>
                <objective>Configure firewall rules</objective>
                <objective>Detect and analyze intrusion attempts</objective>
            </objectives>
        </attack>
    </attacks>

    <!-- Bot Behavior Settings -->
    <behavior>
        <response_delay>1.0</response_delay> <!-- seconds -->
        <max_conversation_length>10</max_conversation_length>
        <idle_timeout>300</idle_timeout> <!-- seconds -->
        <learning_enabled>false</learning_enabled> <!-- Don't learn from user interactions -->

        <!-- Response filters -->
        <filters>
            <filter type="profanity" enabled="true"/>
            <filter type="personal_info" enabled="true"/>
            <filter type="malicious_commands" enabled="true"/>
        </filters>
    </behavior>

    <!-- Logging Configuration -->
    <logging>
        <level>INFO</level>
        <file>logs/hfbot.log</file>
        <console>true</console>
        <rotate>true</rotate>
        <max_size>10MB</max_size>
        <max_files>5</max_files>
    </logging>

    <!-- Performance Settings -->
    <performance>
        <cache_responses>true</cache_responses>
        <cache_size>100</cache_size>
        <cache_ttl>3600</cache_ttl> <!-- seconds -->
        <max_concurrent_requests>5</max_concurrent_requests>
    </performance>

    <!-- Security Settings -->
    <security>
        <allowed_users>*</allowed_users> <!-- All users allowed -->
        <blocked_users></blocked_users>
        <rate_limit>
            <messages_per_minute>10</messages_per_minute>
            <block_duration>60</block_duration> <!-- seconds -->
        </rate_limit>
    </security>
</bot_config>
